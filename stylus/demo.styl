*
    margin 0
    padding 0
    box-sizing border-box
    line-height 1
    font-family "Microsoft Yahei", Arial
    font-size 14px
    color rgb(70,70,70)
    word-spacing 3px
input
select
    border none
    outline none
form
    position relative
    margin-left 420px
    margin-top 66px
    h3
        font-size 16px
        font-weight normal
    .formLeft
        margin-top 30px
        float left
        p
            margin-bottom 31px
    .formRight
        margin-top 22px
        margin-left 15px
        width 262px
        float left
        input
            height 30px
            width inherit
            float left
            margin-bottom 15px
            border 1px solid rgb(226,226,226)
            &:last-of-type
                background rgb(50,193,185)
                border-color rgb(50,193,185)
                color white
                cursor pointer
            /*&:nth-of-type(3)
            &:nth-of-type(4)
                &:after
                    content '花花绿绿'*/

        select
            height 30px
            width 131px
            float left
            border 1px solid rgb(226,226,226)
            &:not(:nth-of-type(2))
                margin-bottom 15px
            &:last-of-type
                width 262px
            &:after
                content '电风扇的'
    .add
        position relative
        top 298px
        left 22px
        display inline-block

        span
            &:first-child
                width 18px
                height 18px
                display inline-block
                line-height 18px
                text-align center
                border-radius 50%
                background rgb(50,193,185)
                color white
                font-size 16px
                cursor pointer
.form
    width 1140px
    height 600px
    border-color  rgb(237,237,237)
    border-style solid
    border-width 40px 70px 50px
    background-image url(../1.jpg)
    background-repeat no-repeat
    background-position 140px 128px
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)

.table
    width 100px
    height 30px
    border 1px solid black
